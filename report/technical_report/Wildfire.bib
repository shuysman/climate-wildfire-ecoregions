@article{tercekHistoricalChangesPlant2021,
  title = {Historical Changes in Plant Water Use and Need in the Continental {{United States}}},
  author = {Tercek, Michael T. and Thoma, David and Gross, John E. and Sherrill, Kirk and Kagone, Stefanie and Senay, Gabriel},
  year = 2021,
  month = sep,
  journal = {PLOS ONE},
  volume = {16},
