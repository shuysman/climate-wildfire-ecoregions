  keywords = {convection,crown scorch,energy dose,fire effects,leaves,plant hydraulics,post-fire tree mortality,tree stress},
  file = {/home/steve/sync/zotero/Varner et al. - 2021 - Tree crown injury from wildland fires causes, measurement and ecological and physiological conseque.pdf;/home/steve/Zotero/storage/HI4UTF4V/nph.html}
