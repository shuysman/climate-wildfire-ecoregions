@article{jonesGlobalRegionalTrends2022,
  title = {Global and {{Regional Trends}} and {{Drivers}} of {{Fire Under Climate Change}}},
  author = {Jones, Matthew W. and Abatzoglou, John T. and Veraverbeke, Sander and Andela, Niels and Lasslop, Gitta and Forkel, Matthias and Smith, Adam J. P. and Burton, Chantelle and Betts, Richard A. and Van Der Werf, Guido R. and Sitch, Stephen and Canadell, Josep G. and Sant{\'i}n, Cristina and Kolden, Crystal and Doerr, Stefan H. and Le Qu{\'e}r{\'e}, Corinne},
  year = 2022,
  month = sep,
  journal = {Reviews of Geophysics},
