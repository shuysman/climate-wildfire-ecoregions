@article{fischerWildfireRiskSocioecological2016,
  title = {Wildfire Risk as a Socioecological Pathology},
  author = {Fischer, A Paige and Spies, Thomas A and Steelman, Toddi A and Moseley, Cassandra and Johnson, Bart R and Bailey, John D and Ager, Alan A and Bourgeron, Patrick and Charnley, Susan and Collins, Brandon M and Kline, Jeffrey D and Leahy, Jessica E and Littell, Jeremy S and Millington, James DA and {Nielsen-Pincus}, Max and Olsen, Christine S and Paveglio, Travis B and Roos, Christopher I and {Steen-Adams}, Michelle M and Stevens, Forrest R and Vukomanovic, Jelena and White, Eric M and Bowman, David MJS},
