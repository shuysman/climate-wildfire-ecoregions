@article{nauslarImpactNorthAmerican2019,
  title = {Impact of the {{North American}} Monsoon on Wildfire Activity in the Southwest {{United States}}},
  author = {Nauslar, Nicholas J. and Hatchett, Benjamin J. and Brown, Timothy J. and Kaplan, Michael L. and Mejia, John F.},
