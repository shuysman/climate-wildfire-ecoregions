  langid = {english},
  keywords = {climate change,multi-decadal variability,Pacific Decadal Oscillation,vapor pressure deficit,western United States,wildfire},
  file = {/home/steve/sync/zotero/Chiodi et al. - 2021 - Multi-Decadal Change in Western US Nighttime Vapor Pressure Deficit.pdf;/home/steve/Zotero/storage/UDN6XSEE/2021GL092830.html}
