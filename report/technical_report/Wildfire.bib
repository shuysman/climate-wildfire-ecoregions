@article{littellClimateChangeFuture2018,
  title = {Climate {{Change}} and {{Future Wildfire}} in the {{Western United States}}: {{An Ecological Approach}} to {{Nonstationarity}}},
  shorttitle = {Climate {{Change}} and {{Future Wildfire}} in the {{Western United States}}},
  author = {Littell, Jeremy S. and McKenzie, Donald and Wan, Ho Yi and Cushman, Samuel A.},
  year = 2018,
  journal = {Earth's Future},
  volume = {6},
  number = {8},
  pages = {1097--1111},
