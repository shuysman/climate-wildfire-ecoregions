  author = {Kudl{\'a}{\v c}kov{\'a}, Lucie and Barto{\v s}ov{\'a}, Lenka and Linda, Rostislav and Bl{\'a}hov{\'a}, Monika and Pod{\v e}bradsk{\'a}, Mark{\'e}ta and Fischer, Milan and Balek, Jan and {\v Z}alud, Zden{\v e}k and Trnka, Miroslav},
  year = 2024,
