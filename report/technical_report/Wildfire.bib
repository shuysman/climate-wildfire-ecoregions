@article{thomaWaterBalanceIndicator2020,
  title = {Water Balance as an Indicator of Natural Resource Condition: {{Case}} Studies from {{Great Sand Dunes National Park}} and {{Preserve}}},
  shorttitle = {Water Balance as an Indicator of Natural Resource Condition},
  author = {Thoma, David P. and Tercek, Michael T. and Schweiger, E. William and Munson, Seth M. and Gross, John E. and Olliff, S. Tom},
