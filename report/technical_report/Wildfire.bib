  keywords = {COVID-19,debris burning,fireworks,human fires,recreation,wildfire},
  file = {/home/steve/sync/zotero/Jorge et al. - 2025 - COVID-19 Fueled an Elevated Number of Human-Caused Ignitions in the Western United States During the.pdf;/home/steve/Zotero/storage/ZAZB89J5/2024EF005744.html}
