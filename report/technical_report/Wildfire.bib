  title = {Spatial {{Variation}} in {{Postfire Cheatgrass}}: {{Dinosaur National Monument}}, {{USA}}},
  shorttitle = {Spatial {{Variation}} in {{Postfire Cheatgrass}}},
  author = {Sherrill, Kirk R. and Romme, William H.},
