@misc{xuDeepLearningWildfire2025,
  title = {Deep {{Learning}} for {{Wildfire Risk Prediction}}: {{Integrating Remote Sensing}} and {{Environmental Data}}},
  shorttitle = {Deep {{Learning}} for {{Wildfire Risk Prediction}}},
  author = {Xu, Zhengsen and Li, Jonathan and Cheng, Sibo and Rui, Xue and Zhao, Yu and He, Hongjie and Guan, Haiyan and Sharma, Aryan and Erxleben, Matthew and Chang, Ryan and Xu, Linlin},
  year = 2025,
