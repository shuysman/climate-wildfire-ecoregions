  author = {Riley, Karin L. and Abatzoglou, John T. and Grenfell, Isaac C. and Klene, Anna E. and Heinsch, Faith Ann and Riley, Karin L. and Abatzoglou, John T. and Grenfell, Isaac C. and Klene, Anna E. and Heinsch, Faith Ann},
